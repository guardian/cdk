{
  "name": "@guardian/cdk",
  "description": "Generic Guardian flavoured AWS CDK components",
  "version": "62.1.2",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "bin": {
    "gu-cdk": "bin/gu-cdk"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guardian/cdk.git"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint src",
    "prettier:check": "prettier --check \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "watch": "tsc -w",
    "test": "jest --detectOpenHandles --runInBand",
    "test:custom-lint-rule": "eslint tools/eslint/rules/*.test.ts",
    "test:dev": "jest --detectOpenHandles --runInBand --watch",
    "prepare": "tsc",
    "prepack": "cp -r src/bin/commands/new-project/template lib/bin/commands/new-project/template",
    "release": "npx changeset",
    "release:docs": "rm -rf target && typedoc && gh-pages -d target -u \"github-actions-bot <support+actions@github.com>\"",
    "serve:docs": "rm -rf target && typedoc && serve target",
    "cli:dev": "ts-node src/bin/index.ts"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.7",
    "@guardian/eslint-config": "^13.0.0",
    "@guardian/eslint-plugin-tsdoc-required": "^0.1.3",
    "@guardian/tsconfig": "^1.0.1",
    "@types/git-url-parse": "^16.0.2",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "24.10.1",
    "@types/yargs": "^17.0.35",
    "aws-cdk": "2.1030.0",
    "aws-cdk-lib": "2.219.0",
    "constructs": "10.4.2",
    "eslint": "^9.34.0",
    "eslint-plugin-custom-rules": "file:tools/eslint",
    "gh-pages": "^6.3.0",
    "jest": "^30.2.0",
    "prettier": "^3.7.0",
    "serve": "^14.2.5",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.14",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@aws-sdk/client-ec2": "^3.940.0",
    "@aws-sdk/client-ssm": "^3.940.0",
    "@aws-sdk/credential-providers": "^3.940.0",
    "@oclif/core": "4.8.0",
    "chalk": "^5.6.2",
    "codemaker": "^1.120.0",
    "git-url-parse": "^16.1.0",
    "js-yaml": "^4.1.1",
    "read-pkg-up": "11.0.0",
    "yargs": "^18.0.0"
  },
  "peerDependencies": {
    "aws-cdk": "^2.1030.0",
    "aws-cdk-lib": "^2.219.0",
    "constructs": "^10.4.2"
  }
}
