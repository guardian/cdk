{
  "name": "@guardian/cdk",
  "description": "Generic Guardian flavoured AWS CDK components",
  "version": "48.0.1",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "bin": {
    "gu-cdk": "bin/gu-cdk"
  },
  "repository": "github:guardian/cdk",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "prettier:check": "prettier --check \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "watch": "tsc -w",
    "test": "jest --detectOpenHandles --runInBand",
    "test:custom-lint-rule": "eslint tools/eslint/rules/*.test.ts",
    "test:dev": "jest --detectOpenHandles --runInBand --watch",
    "prepare": "tsc",
    "prepack": "cp -r src/bin/commands/new-project/template lib/bin/commands/new-project/template",
    "release": "semantic-release",
    "release:docs": "rm -rf target && typedoc && gh-pages -d target -u \"github-actions-bot <support+actions@github.com>\"",
    "serve:docs": "rm -rf target && typedoc && serve target",
    "cli:dev": "ts-node src/bin/index.ts"
  },
  "devDependencies": {
    "@guardian/eslint-config-typescript": "1.0.11",
    "@types/git-url-parse": "^9.0.1",
    "@types/jest": "^29.1.2",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash.camelcase": "^4.3.7",
    "@types/lodash.kebabcase": "^4.1.7",
    "@types/lodash.upperfirst": "^4.3.7",
    "@types/node": "18.11.2",
    "@types/yargs": "^17.0.13",
    "aws-cdk": "2.45.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.25.0",
    "eslint-plugin-custom-rules": "file:tools/eslint",
    "gh-pages": "^4.0.0",
    "jest": "^29.1.2",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.5",
    "serve": "^14.0.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.17",
    "typescript": "~4.8.4"
  },
  "dependencies": {
    "@oclif/core": "1.16.5",
    "aws-cdk-lib": "2.45.0",
    "aws-sdk": "^2.1235.0",
    "chalk": "^4.1.2",
    "codemaker": "^1.69.0",
    "constructs": "10.1.127",
    "git-url-parse": "^13.1.0",
    "js-yaml": "^4.1.0",
    "lodash.camelcase": "^4.3.0",
    "lodash.kebabcase": "^4.1.1",
    "lodash.upperfirst": "^4.3.1",
    "read-pkg-up": "7.0.1",
    "yargs": "^17.6.0"
  },
  "peerDependencies": {
    "aws-cdk": "2.45.0",
    "aws-cdk-lib": "2.45.0",
    "constructs": "10.1.127"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
